<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DeveloperActivity"
    android:background="@drawable/developer_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_developer_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tv_title_developer_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="About me"
            android:textColor="#B2BEB5"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_foreground"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="277dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_developer_activity"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintVertical_bias="0.07999998"
        app:srcCompat="@drawable/im_14" />

    <TextView
        android:id="@+id/textView_info"
        android:layout_width="303dp"
        android:layout_height="278dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="#94B49F"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:autoLink="web"/>
</androidx.constraintlayout.widget.ConstraintLayout>